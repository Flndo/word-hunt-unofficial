<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#77DD77"/> <!-- This is the background color of the tile -->
            <corners android:radius="16dp"/> <!-- This is the corner radius -->
            <stroke android:width="4dp" android:color="#55BB55"/> <!-- This is the border of the tile -->
        </shape>
    </item>
</selector>
